			<<set $ourStore.shelter += 100>>
			<<set $costs = Number(($ourStore.display+$ourStore.shelter+$ourStore.space) / 5).toFixed(2)>>
			<<replace "#stats-shelter">><<print $ourStore.shelter>><</replace>>
