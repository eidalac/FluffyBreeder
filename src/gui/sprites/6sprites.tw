    <<set _sixLinesAlicorn = `./art/sprites/${_speciesName}/6_lines_alicorn.png`>>
    <<set _sixLinesEarthie = `./art/sprites/${_speciesName}/6_lines_earthie.png`>>
    <<set _sixLinesPegasus = `./art/sprites/${_speciesName}/6_lines_pegasus.png`>>
    <<set _sixLinesUnicorn = `./art/sprites/${_speciesName}/6_lines_unicorn.png`>>

